FROM centos:7.5.1804

LABEL maintainer="yee.yi@vesoft.com"

RUN yum update -y \
  && yum install -y centos-release-scl \
  && yum install -y devtoolset-8 \
  && scl enable devtoolset-8 -- bash \
  && yum -y install git \
    vim \
    wget \
    libtool \
    autoconf \
    autoconf-archive \
    automake \
    make \
    perl \
    perl-WWW-Curl \
    libstdc++-static \
    ncurses-devel \
    readline-devel \
    xz-devel \
    maven \
    unzip \
    file \
    java-1.8.0-openjdk \
  && yum clean all \
  && rm -rf /var/cache/yum

RUN useradd -mr engshare && chmod -R 755 /home/engshare

RUN wget https://nebula-graph.oss-cn-hangzhou.aliyuncs.com/build-deb/centos-7.5-1804.tar.gz \
  && tar xf centos-7.5-1804.tar.gz  \
  && rpm -ivh centos-7.5-1804/*.rpm \
  && wget http://ftp.gnu.org/gnu/bison/bison-3.0.5.tar.gz \
  && tar xf bison-3.0.5.tar.gz \
  && cd bison-3.0.5 && ./configure && make && make install && cd .. \
  && rm -rf centos-7.5-1804* bison-*

RUN echo 'alias ctest="/home/engshare/cmake/bin/ctest"\n\
alias cmake="/home/engshare/cmake/bin/cmake -DNEBULA_GPERF_BIN_DIR=/home/engshare/gperf/bin -DNEBULA_FLEX_ROOT=/home/engshare/flex -DNEBULA_BOOST_ROOT=/home/engshare/boost -DNEBULA_OPENSSL_ROOT=/home/engshare/openssl -DNEBULA_KRB5_ROOT=/home/engshare/krb5 -DNEBULA_LIBUNWIND_ROOT=/home/engshare/libunwind"\n\
export LIBRARY_PATH="/usr/lib/x86_64-linux-gnu:$LIBRARY_PATH"' >> ~/.bashrc

RUN mkdir -p /home/nebula \
  && git clone https://github.com/yixinglu/nebula-3rdparty.git /home/nebula/nebula-3rdparty \
  && cd /home/nebula/nebula-3rdparty \
  && LIBRARY_PATH="/usr/lib/x86_64-linux-gnu:$LIBRARY_PATH" /home/engshare/cmake/bin/cmake -DNEBULA_GPERF_BIN_DIR=/home/engshare/gperf/bin -DNEBULA_FLEX_ROOT=/home/engshare/flex -DNEBULA_BOOST_ROOT=/home/engshare/boost -DNEBULA_OPENSSL_ROOT=/home/engshare/openssl -DNEBULA_KRB5_ROOT=/home/engshare/krb5 -DNEBULA_LIBUNWIND_ROOT=/home/engshare/libunwind -DSKIP_JAVA_JAR=ON . \
  && LIBRARY_PATH="/usr/lib/x86_64-linux-gnu:$LIBRARY_PATH" make && make install \
  && cd /home/nebula \
  && rm -rf /home/nebula/*

  # && cd third-party/fbthrift/thrift/lib/java/thrift \
  # && mvn compile install \

WORKDIR /home/nebula
